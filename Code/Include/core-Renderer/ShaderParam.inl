template< typename T >
ShaderParamInt< T >::ShaderParamInt( const std::string& name, int val ) 
   : m_name( name )
   , m_val( val ) 
{}

///////////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////

template< typename T >
ShaderParamIntArray< T >::ShaderParamIntArray( const std::string& name, const int* arr, unsigned int size ) 
   : m_name( name )
   , m_size( size )
{
   m_val = new int[size];
   memcpy( m_val, arr, size * sizeof( int ) );
}

///////////////////////////////////////////////////////////////////////////////

template< typename T >
ShaderParamIntArray< T >::~ShaderParamIntArray()
{
   delete [] m_val; m_val = NULL;
}

